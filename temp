mysql --user=root --password="" << _EOF_
CREATE DATABASE wp;
USE wp;
GRANT ALL ON *.* TO 'user1'@'%' IDENTIFIED BY '123';
GRANT ALL ON *.* TO 'user1'@'localhost' IDENTIFIED BY '123';
FLUSH PRIVILEGES;
DELETE FROM mysql.user WHERE user='';
DELETE FROM mysql.user WHERE user='root' AND host NOT IN('localhost', '127.0.0.1', '::1');
DROP DATABASE IF EXISTS tests;
DELETE FROM mysql.db WHERE Db='test' OR Db='test\\_%';
FLUSH PRIVILEGES;
ALTER USER 'root'@'localhost' IDENTIFIED BY 'master';
FLUSH PRIVILEGES;
_EOF_

    sed -i "s/password =/password = master/g" /etc/mysql/debian.cnf
    service mysql stop